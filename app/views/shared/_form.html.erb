<div class="well">
  <%= form_for :event_search, url: event_searches_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :event_type %>
      <%= f.select :event_type, collection: Rails.application.config.github_event_types %>
    </div>
    <div class="form-group">
      <%= f.label :repo_name %>
      <%= f.text_field :repo_name %>
    </div>
    <div class="form-group">
      <%= f.label :user_name %>
      <%= f.text_field :user_name %>
    </div>

    <%= f.submit "Find Events", class: "btn btn-primary" %>
  <% end %>
</div>
